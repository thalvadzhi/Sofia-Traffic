<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/SpecialButton</item>
        <item name="viewPagerBackgroundColor">@color/viewPagerBackgroundLight</item>
        <item name="tabSelectedColor">@color/white</item>
        <item name="tabUnselectedColor">@color/lightGray</item>
        <item name="actionBarColor">@color/colorPrimaryDark</item>
        <item name="locationSelector">@drawable/location_button</item>
        <item name="starToggle">@drawable/star_toggle</item>
        <item name="iconEdit">@drawable/ic_mode_edit_black_48dp</item>
        <item name="stationCodeBackgroundFavourites">@drawable/rounded_edges</item>
        <item name="stationCodeTextColorFavourites">@color/white</item>
        <item name="transitionSlideUpPanel">@drawable/transition_purple_white</item>
        <item name="backgroundColorSlideUpPanel">@color/white</item>
        <item name="clock">@drawable/clock</item>
        <item name="locationInSlideUp" format="reference">@drawable/location</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="viewPagerBackgroundColor">@color/viewPagerBackgroundDark</item>
        <item name="tabSelectedColor">@color/white</item>
        <item name="tabUnselectedColor">@color/lightGray</item>
        <item name="actionBarColor">@android:color/black</item>
        <item name="locationSelector">@drawable/location_button_white</item>
        <item name="starToggle">@drawable/star_toggle_white</item>
        <item name="iconEdit">@drawable/ic_edit_white_48dp</item>
        <item name="stationCodeBackgroundFavourites">@drawable/rounded_edges_white</item>
        <item name="stationCodeTextColorFavourites">@android:color/black</item>
        <item name="transitionSlideUpPanel">@drawable/transition_black_white</item>
        <item name="backgroundColorSlideUpPanel">@color/darkGrey</item>

        <item name="locationInSlideUp" format="reference">@drawable/location_white</item>
        <item name="clock">@drawable/clock_white1</item>


    </style>

