<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LocationFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/spinners_and_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/transportationType"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/lineNumber"
            android:layout_toEndOf="@+id/transportationType" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonsLocateAndShowOnMap"

            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            >



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Списък"
                android:textAllCaps="true"
                android:id="@+id/buttonLocate"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="На картата"
                android:id="@+id/buttonShowOnMap"
                android:layout_toEndOf="@+id/buttonLocate"/>


        </RelativeLayout>


    </RelativeLayout>




    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_container"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinners_and_buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </FrameLayout>


</RelativeLayout>
