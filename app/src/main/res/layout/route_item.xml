<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/childLayout">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:background="@drawable/location_button"
        android:layout_centerVertical="true"
        android:id="@+id/locationItem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stopName"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/locationItem"
        android:layout_toLeftOf="@+id/textViewRouteCode"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopName"
        android:id="@+id/textViewRouteDirection"
        android:textSize="10dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/locationItem"
        android:layout_toLeftOf="@+id/textViewRouteCode"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/textViewRouteCode"
        android:background="@drawable/rounded_edges"
        android:textColor="@color/white"
        android:layout_centerVertical="true"/>
</RelativeLayout>
