<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="3dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/stop_name_code_container"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imageView_name_result_location">

                <TextView
                    android:id="@+id/name_search_result_stop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Кемпински хотел зографски"
                    android:textSize="20dp"
                    android:textColor="?whiteBlack"/>

                <TextView
                    android:id="@+id/name_search_result_stop_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_search_result_stop_name"
                    android:text="923"
                    android:textSize="15dp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/imageView_name_result_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="?locationSelector" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>