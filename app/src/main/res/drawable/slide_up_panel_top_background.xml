<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- draw a 4 dp width border around the rectangle shape -->
            <stroke android:color="?attr/slideUpPanelBorderColor" android:width="1dp"/>
<!--                        <corners android:radius="2dp" />-->
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>

        </shape>
    </item>

    <item android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/backgroundColorSlideUpPanel"/>
<!--            <corners android:radius="2dp" />-->
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
        </shape>
    </item>

</layer-list>