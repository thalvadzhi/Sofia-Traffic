<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="@string/key_choose_startup_screen"
        android:title="@string/choose_startup_screen"
        android:entries="@array/choose_screen_human_readable"
        android:entryValues="@array/choose_screen_values"
        android:defaultValue="@string/default_startup_screen"
        android:summary="@string/summary_startup_screen"
        />

    <ListPreference
        android:key="@string/key_choose_theme"
        android:title="@string/choose_theme"
        android:entries="@array/choose_theme_human_readable"
        android:entryValues="@array/choose_theme_values"
        android:defaultValue="@string/light_theme_value"
        android:summary="@string/theme_summary"
        />

    <ListPreference
        android:key="@string/key_choose_query_method"
        android:title="@string/choose_query_method"
        android:entries="@array/choose_query_method_human_readable"
        android:entryValues="@array/choose_query_method_values"
        android:defaultValue="@string/query_method_fast_value"
        android:summary="@string/query_method_summary"
        />

    <ListPreference
        android:key="@string/key_choose_search_method"
        android:title="@string/search_method_title"
        android:entries="@array/choose_search_method_human_readable"
        android:entryValues="@array/choose_search_method_values"
        android:defaultValue="@string/search_method_code_value"
        android:summary="@string/search_method_summary"
        />

</PreferenceScreen>