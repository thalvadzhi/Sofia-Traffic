<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/group"
    android:padding="10dp"
    android:layout_gravity="center_vertical">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/location_button"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:id="@+id/locationGroup"
        android:layout_centerVertical="true"
        android:focusable="false"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstStop"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/locationGroup" />
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        android:layout_toEndOf="@+id/locationGroup"
        android:id="@+id/lineSeparator"
        android:layout_below="@+id/firstStop"/>

    <TextView
        android:text="TextView"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineSeparator"
        android:layout_toEndOf="@+id/locationGroup"
        android:id="@+id/lastStop" />
</RelativeLayout>
