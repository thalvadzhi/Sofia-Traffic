<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="10dp">


        <ImageButton
            android:id="@+id/locationGroup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/location_button"
            android:focusable="false"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/firstStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/locationGroup"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20dp" />

        <View
            android:id="@+id/lineSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/firstStop"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/locationGroup"
            android:background="#646464" />

        <TextView
            android:id="@+id/lastStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineSeparator"
            android:layout_toEndOf="@+id/locationGroup"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
