<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">


<android.support.v7.widget.CardView android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_results"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:padding="6dp"
        android:layout_gravity="center">
    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:background="#FF0000"

        android:layout_centerVertical="true">

    </TextView>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:padding="6dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView_transportation_type"
            android:background="@drawable/rounded_edges"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_transportation_type">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView_card_station_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAlignment="center"
                android:id="@+id/textView_card_times"
                android:paddingBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView_card_station_name"
                android:layout_alignParentEnd="true"
                 />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/more_button"
                android:id="@+id/more_button"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:layout_below="@+id/textView_card_times"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp"
                android:layout_below="@+id/textView_card_times"
                android:id="@+id/progressBarSingleLine" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


</LinearLayout>
