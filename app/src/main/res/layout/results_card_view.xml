<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:padding="10dp"
    >


<android.support.v7.widget.CardView
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_results"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:padding="6dp"
        android:layout_gravity="center">
    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:background="#FF0000"

        android:layout_centerVertical="true">

    </TextView>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:padding="6dp">


        <TextView
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView_card_station_name"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView_card_times"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView_transportation_type"
            android:background="@drawable/rounded_edges"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textAlignment="center"
            android:id="@+id/textView_card_times"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView_card_station_name"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView_transportation_type" />
    </RelativeLayout>

</android.support.v7.widget.CardView>



</RelativeLayout>